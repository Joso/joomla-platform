<?xml version="1.0" encoding="UTF-8"?>
<project name="joomla-doku-kuku" default="build"
	basedir="/home/elkuku/Downloads/docbook/dobudish-1.1.4">

	<property name="dobudish_path" value="/home/elkuku/Downloads/docbook/dobudish-1.1.4" />

	<property name="dest_path"
		value="/home/elkuku/eclipsespace/indigogit2/joomla-platform-kuku-gh-pages" />

	<target name="build">
		<delete dir="${dest_path}/build" />
		<mkdir dir="${dest_path}/build" />

		<delete dir="${dest_path}/coding-standards" />
		<mkdir dir="${dest_path}/coding-standards" />

		<delete dir="${dest_path}/manual" />
		<mkdir dir="${dest_path}/manual" />

		<!-- Coding standards -->
		
		<exec executable="${dobudish_path}/generator.sh">
			<arg value="jcoding-standards" />
			<arg value="html" />
		</exec>

		<copy todir="${dest_path}/coding-standards">
			<fileset dir="${dobudish_path}/documents/jcoding-standards/output/html">
			</fileset>
		</copy>

		<exec executable="${dobudish_path}/generator.sh">
			<arg value="jcoding-standards" />
			<arg value="epub" />
		</exec>

		<copy todir="${dest_path}/build">
			<fileset dir="${dobudish_path}/documents/jcoding-standards/output/epub">
			</fileset>
		</copy>
		
		<!-- Manual -->

		<exec executable="${dobudish_path}/generator.sh">
			<arg value="jplatform-manual" />
			<arg value="html" />
		</exec>

		<copy todir="${dest_path}/manual">
			<fileset dir="${dobudish_path}/documents/jplatform-manual/output/html">
			</fileset>
		</copy>

		<exec executable="${dobudish_path}/generator.sh">
			<arg value="jplatform-manual" />
			<arg value="epub" />
		</exec>

		<copy todir="${dest_path}/build">
			<fileset dir="${dobudish_path}/documents/jplatform-manual/output/epub">
			</fileset>
		</copy>
	</target>

</project>
